                    Grid.Column="4"
                    HorizontalTextAlignment="End"
                    Text="20,822"
                    TextColor="Black" />
                <Label
                    Grid.Row="1"
                    Grid.Column="4"
                    HorizontalOptions="End"
                    Text="27,303"
                    TextColor="Black" />
            </Grid>
        </Frame>
        <StackLayout
            Padding="0,10,0,0"
            HorizontalOptions="Center"
            Orientation="Horizontal">
            <Label
                x:Name="Xanh"
                Text="75.23"
                TextColor="Black" />
            <Grid ColumnSpacing="0" WidthRequest="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75.23*" />
                    <ColumnDefinition Width="24.77*" />
                </Grid.ColumnDefinitions>
                <StackLayout
                    Grid.Column="0"
                    BackgroundColor="Green"
                    HeightRequest="5"
                    VerticalOptions="Center" />
                <StackLayout
                    Grid.Column="1"
                    BackgroundColor="Red"
                    HeightRequest="5"
                    VerticalOptions="Center" />
            </Grid>
            <Label
                x:Name="Do"
                Text="24.77"
                TextColor="Black" />
